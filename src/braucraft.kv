#:kivy 1.0
#<TimerWidget>

#:set button_font_size 40
#:set label_font_size 60

#:import CyclicRoulette kivy.garden.roulette.CyclicRoulette
#:import WipeTransition kivy.uix.screenmanager.WipeTransition

<TimerWidget>:
    label_temperature: lbl_temperature
    label_timer_value: lbl_timer_value
    roulette_time: rlt_time

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: (1, .2)
            Button:
                text: "Hauptmen체"
                font_size: button_font_size
                on_release: root.manager.current = "main"
            Button:
                text: "Start"
                font_size: button_font_size
            Button:
                text: "Stop"
                font_size: button_font_size
            Label:
                text: "000 min"
                font_size: button_font_size
                id: lbl_timer_value
        
        BoxLayout:
            CyclicRoulette:
                cycle: 200
                density: 8.8
                zero_indexed: False
                width: 200
                id: rlt_time
            Label:
                size_hint: (1, .8)
                text: "000.0 째C"
                id: lbl_temperature
                font_size: 250
            

<MainWidget>:
    label_temperature: lbl_temperature
    label_target_temperature: lbl_target_temperature
    label_timer_value: lbl_timer_value

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: (1, .2)
            Button:
                text: "Zieltemperatur"
                font_size: button_font_size
            Label:
                id: lbl_target_temperature
                text: "000.00 째C"
                font_size: label_font_size
            Button:
                text: "Timer stellen"
                font_size: button_font_size
                on_release: root.manager.current = "timer"
            Label:
                text: "000 min"
                font_size: label_font_size
                id: lbl_timer_value
         
        Label:
            size_hint: (1, .8)
            text: "000.0 째C"
            id: lbl_temperature
            font_size: 300
            
